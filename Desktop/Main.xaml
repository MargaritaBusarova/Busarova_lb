<Window x:Class="Desktop.Main"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Desktop"
        mc:Ignorable="d"
        Title="Main" Height="600" Width="800" MinWidth="800" MinHeight="600">
    <Window.Resources>
        <Style x:Key="CategoryStyle" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="Normal" />
            <Setter Property="TextDecorations" Value="None" />
            <Setter Property="Foreground" Value="Black" />
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsSelected}" Value="True">
                    <Setter Property="FontWeight" Value="Bold" />
                    <Setter Property="TextDecorations" Value="Underline" />
                    <Setter Property="Foreground" Value="Green" />
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Height="600" Width="800">
        <Image HorizontalAlignment="Left" Height="75" Margin="35,35,0,0" VerticalAlignment="Top" Width="75" Source="/images/logo.png" />
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="146,72,0,490" Width="246">
            <TextBlock Text="Все" Foreground="Yellow" Margin="10,0" Style="{StaticResource CategoryStyle}" MouseLeftButtonUp="CategorySelected"/>
            <TextBlock Text="Дом" Foreground="Green" Margin="10,0" Style="{StaticResource CategoryStyle}" MouseLeftButtonUp="CategorySelected"/>
            <TextBlock Text="Работа" Foreground="OrangeRed" Margin="10,0" Style="{StaticResource CategoryStyle}" MouseLeftButtonUp="CategorySelected"/>
            <TextBlock Text="Учёба" Foreground="#FF42DC" Margin="10,0" Style="{StaticResource CategoryStyle}" MouseLeftButtonUp="CategorySelected"/>
            <TextBlock Text="Отдых" Foreground="#FFC12FDC" Margin="10,0" Style="{StaticResource CategoryStyle}" MouseLeftButtonUp="CategorySelected"/>
        </StackPanel>


        <StackPanel HorizontalAlignment="Left" Width="118" Margin="13,128,0,287">
            <TextBlock Text="{Binding UserName}" FontSize="16" FontWeight="Bold" Height="25" HorizontalAlignment="Center" Width="94" TextAlignment="Center"/>

            <TextBlock Text="Задачи" FontSize="16" Margin="0, 50, 0, 20" Foreground="#FF621515" TextAlignment="Center"/>
            <TextBlock Text="История" FontSize="16" Margin="0, 20, 0, 20" Foreground="#FF621515" TextAlignment="Center"/>
        </StackPanel>

        <Border x:Name="TaskPanel" BorderBrush="Black" BorderThickness="1" Padding="10" Margin="494,128,40,64" Visibility="Collapsed">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top" Width="256" Height="194" Margin="0,193,0,0">

                <Button x:Name="Done" Content="Готово" Height="40" FontSize="16" Margin="0, 90, 0, 10" Background="#FFF96060" Foreground="White" BorderBrush="#FFF96060" Width="220" Click="Done_Click" Grid.Column="1" Visibility="Collapsed">
                    <Button.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="10, 10, 5, 5"/>
                        </Style>
                    </Button.Resources>
                </Button>
                <Button x:Name="Delete" Content="Удалить" Height="40" FontSize="16" Background="#FFF96060" Foreground="White" BorderBrush="#FFF96060" Width="220" Click="Delete_Click" Grid.Column="1" >
                    <Button.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="5, 5, 10, 10"/>
                        </Style>
                    </Button.Resources>
                </Button>
            </StackPanel>
        </Border>

        <Button Content="+" Height="40" FontSize="16" Background="#FFF96060" Foreground="White" BorderBrush="#FFF96060" Margin="40,516,722,44">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="50, 50, 50, 50"/>
                </Style>
            </Button.Resources>
        </Button>



        <ListBox x:Name="Task" ItemsSource="{Binding FilteredTasks}" Margin="169,128,346,64" SelectionChanged="ListBox_SelectionChanged"
         ScrollViewer.HorizontalScrollBarVisibility="Disabled" ScrollViewer.VerticalScrollBarVisibility="Auto" Background="White" BorderBrush="{x:Null}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <RadioButton BorderBrush="#FF0056FF" IsChecked="{Binding IsCompleted}" Margin="5" />
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <TextBlock Grid.Row="0" Text="{Binding Title}" />
                            <TextBlock Grid.Row="1" Text="{Binding Time}" />
                        </Grid>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <TextBlock FontSize="20" x:Name="myName" Text="" Margin="520,145,62,409" TextAlignment="Center" />
        <TextBlock x:Name="Name_Zadacha" Text="" Margin="510,207,73,345" />
        <TextBlock x:Name="Description" Text="" Margin="510,272,72,280" />
    </Grid>
</Window>
